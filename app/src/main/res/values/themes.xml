<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookManagement" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#1B98F5</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Custom datepicker color-->
    <style name="appCompatStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
    </style>

    <style name="editTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/blue</item>
    </style>
    <!--custom datepicker color-->
</resources>